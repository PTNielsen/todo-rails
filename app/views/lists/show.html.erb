<h1><%= @list.name %></h1>

<p>Add a task</p>
<input type="text" data-list-id="<%= @list.id %>">

<ul class="task-list">
  <% @list.tasks.each do |task| %>
    <li class="task <%= if task.completed? then 'complete' else '' end %>" data-task-id="<%= task.id %>">
      <%= task.content %>
      <%= button_to "Delete", list_task_path(@list, task), method: :delete %>
    </li>
  <% end %>
</ul>